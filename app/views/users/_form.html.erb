<%= form_for(@user, html: {class: 'ui large form'}) do |f| %>
    <div class="ui stacked segment">

      <div class="field">
        <div class='ui labeled input'>
          <div class="ui label">
            <%= f.label :name %>
          </div>
          <%= f.text_field :name %>
        </div>
      </div>

      <div class="field">
        <div class='ui labeled input'>
          <div class="ui label">
            <%= f.label :email %>
          </div>
          <%= f.text_field :email %>
        </div>
      </div>

      <div class="field">
        <div class="ui labeled input">
          <div class="ui label">
            <%= f.label :password %>
          </div>
          <%= f.password_field :password, class: "ui input" %>
        </div>
      </div>

      <div class="field">
        <div class="ui labeled input">
          <div class="ui label">
            <%= f.label :password_confirmation, 'Confirm' %>
          </div>
          <%= f.password_field :password_confirmation, class: "ui input" %>
        </div>
      </div>

      <%= f.submit "Sign up", class: "ui small blue submit button"%>

    </div>
  <% end %>
